<div class="all-header">
  <div class="all-header-wrapper">
    <div>
      <div class="all-header-title-top">
        TAMA
      </div>
      <div class="all-header-title-down">RAMEN</div>
    </div>
    <div class="all-search-form">
      <%= search_form_for @p, url: search_shops_path do |f| %>
      <div class="all-search-input">
        <div class="name-seach">
        <%= f.search_field :name_cont, placeholder:":お店の名前", class: "name-form " ,id: "form" %>

         </div>
        <div>
        <%= f.search_field :address_cont, placeholder:":エリア[ 例)多摩市 ]", class: "address", id: "address" %>
        </div>
        <div class="cp_ipselect cp_sl04">
          <%= f.collection_select :category_name_eq, @category_name, :name, :name, include_blank: 'カテゴリー', class:"custom-select" %>
        </div>
        <button class="search-button">
          <%= image_tag "search.png", class:"search-icon" %>
        </button>
        </div>
      <% end %>



    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li class="header-lists-right1"><%= link_to "#{current_user.nickname}さん", user_path(current_user), class: "usernickname-link" %></li>
        <li class="header-lists-right2"><%= link_to 'ログアウト', "/users/sign_out", method: :delete, class: "logout" %></li>
      <% else %> 
        <li class="header-lists-right1"><%= link_to 'ログイン', "/users/sign_in", class: "login" %></li>
        <li class="header-lists-right2"><%= link_to '新規登録', "/users/sign_up", class: "login" %></li>
      <% end %>
    </ul>
    </div>
</div>
