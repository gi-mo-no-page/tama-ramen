<%= form_with model: @shop, local: true do |f| %>
<div class='field-label'>
    <%= f.label :写真 %>
  </div>
  <div class='field-input'>
    <%= f.file_field :image, id:"#" %>
  </div>
  <div class='field-label'>
    <%= f.label :店名 %>
  </div>
  <div class='field-input'>
    <%= f.text_field :name, autofocus: true%>
  </div>
  <div class='field-label'>
    <%= f.label :紹介文 %>
  </div>
  <div class='field-input'>
    <%= f.text_area :text, autofocus: true%>
  </div>
  <div class='field-label'>
    <%= f.label :ジャンル %>
  </div>
  <div class='field-input'>
    <%= f.text_field :genre, autofocus: true%>
  </div>
  <div class='field-label'>
    <%= f.label :住所 %>
  </div>
  <div class='field-input'>
    <%= f.text_field :address, autofocus: true%>
  </div>
  <div class='actions'>
    <%= f.submit "登録", class: 'btn'%>
  </div>

<% end %>
