<h2>マイページ</h2>
<%= "#{current_user.nickname}さんのマイページ" %><br>
<% if @user.avatar.attached? %>
<%= image_tag @user.avatar.variant(resize:'90x90')  %>
<% else %>
<p><%= image_tag(asset_path('noimage.png'), :size => "90x90") %></p>
<% end %>

<div>
<% if @user.text.present? %>
<%= @user.text %>
<% end %>
</div>

<div>
  口コミ数:<%= @reviews.count %>
<div>

<div>
投稿したお店：<%= @shops.count %>
</div>

  <% if @shops.length != 0 %>
    <% @shops.each do |shop| %>
      <%= link_to shop.name, shop_path(shop.id) %>
      <%= image_tag shop.image.variant(resize:'90x90'), class: '#' if shop.image.attached? %>
    <% end %>
  <% end %>

<div>
  <%= link_to  "お気に入り店", shop_goods_path(@user) %>
  <%= @goods.count %>
<div>
<div>
  <%= link_to  "行った店", shop_wents_path(@user) %>
  <%= @wents.count %>
<div>

<%= link_to "編集", edit_user_path(current_user.id) %>

<%= link_to(root_path) do %>
<i class="fas fa-home"></i>
<% end %>